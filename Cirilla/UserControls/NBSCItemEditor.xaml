<UserControl x:Class="Cirilla.UserControls.NBSCItemEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:root="clr-namespace:Cirilla"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Background="White">
        <StackPanel Orientation="Horizontal" Height="20" root:Spacing.Horizontal="5" Canvas.Top="0" Canvas.Left="0">
            <TextBlock Text="Scale:" Width="60" TextAlignment="Right"/>
            <TextBox Width="100" Text="{Binding Scale}"/>
        </StackPanel>
    </Canvas>
</UserControl>
